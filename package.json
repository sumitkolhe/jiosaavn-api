{
  "name": "node-serverless-template",
  "version": "1.0.0",
  "description": "ðŸš€ Template for creating Serverless Node + TypeScript + Express projects",
  "license": "MIT",
  "author": "sumit kolhe",
  "main": "index.js",
  "repository": "https://github.com/sumitkolhe/node-serverless-template",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch ./src/server.ts",
    "start": "npm run build && cross-env NODE_ENV=production node public/server.js",
    "build": "tsc",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint . --ext \".ts\"",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "deploy": "vercel deploy --prod",
    "postinstall": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint && yarn format"
  },
  "dependencies": {
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-timeout-handler": "^2.2.2",
    "got-cjs": "^12.5.4",
    "joi": "^17.7.0",
    "lru-cache": "^7.14.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@kolhe/eslint-config": "^1.1.8",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.17",
    "eslint": "^8.30.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4"
  }
}
